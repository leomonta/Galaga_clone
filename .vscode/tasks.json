{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "build all modified files",
			"command": "cpp_builder.py",
			"args": [ "-p", "analyzer" ],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [ "$gcc" ],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "build all files",
			"command": "cpp_builder.py",
			"args": [ "-p", "analyzer", "-a" ],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [ "$gcc" ],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "clean build",
			"command": "cpp_builder.py",
			"args": [ "-p", "clean", "-a" ],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [ "$gcc" ],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "process",
			"label": "RenderDoc",
			"command": "qrenderdoc",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"dependsOn": "clean build"
		}
	]
}
