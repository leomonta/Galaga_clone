{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: g++.exe build all modified files",
			"command": "cpp_builder.py",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": ["$gcc"],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "C/C++: g++.exe build all files",
			"command": "cpp_builder.py -a",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": ["$gcc"],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "process",
			"label": "RenderDoc",
			"command" : "qrenderdoc",
			"group": {
				"kind": "test",
				"isDefault": true
			}
		}
	]
}
