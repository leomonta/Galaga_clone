{
	"projectDir": ".",
	"exeName": "Game.bin",
	"compilerExe" : "g++",
	"linkerExe": "g++",
	"Directories": {
		"includeDir": [
			"include",
			"ext"
		],
		"sourceDir": [
			"src"
		],
		"libraryDir": [
			"ext/raylib/lib/debug"
		],
		"objectsDir": "objs",
		"exeDir": "bin"
	},
	"libraries": {
		"Debug": [
			"raylib",
			"dl",
			"pthread"
		],
		"Release": [
			"raylib",
			"dl",
			"pthread"
		]
	},
	"Arguments": {
		"Debug": {
			"Compiler": "-g3 -std=c++2a -Wno-missing-field-initializers -Wno-unknown-pragmas -Wall -Wconversion -Wshadow -Wextra",
			"Linker": "-g" 
		},
		"Release": {
			"Compiler": "-O2 -D_NDEBUG -std=c++2a",
			"Linker": "-s"
		}
	}
}